---
import '../assets/global.css';
import JsonLd from './JsonLd.astro';
import TopNav from '../componets/topNav.vue';
import SiteFooter from '../componets/footer.vue';

export interface Props {
  title: string;
  description: string;
}

const {
  title = "Play Games Free Online | Burrito edition",
  description = "Play thousands of free Flash games & browser games instantly on Burrito Edition - no downloads needed. Nostalgic arcade fun, daily updates, and endless entertainment for gamers everywhere. Play now!"
} = Astro.props;

const siteUrl = "https://burritoedition.com";

const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  name: "BurritoEdition",
  url: siteUrl,
  potentialAction: {
    "@type": "SearchAction",
    target: `${siteUrl}/search/index.html?q={search_term_string}`,
    "query-input": "required name=search_term_string"
  }
};

const orgSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  name: "BurritoEdition",
  url: siteUrl,
  logo: `${siteUrl}/imgs/favicon/favicon-96x96.png`
};

---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title} | Burrito Edition</title>
    <meta name="description" content={description}>
    <JsonLd data={websiteSchema} />
    <JsonLd data={orgSchema} />
    <link rel="icon" type="image/png" href='/imgs/favicon/favicon-96x96.png' sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href='/imgs/favicon/favicon.svg' />
    <link rel="shortcut icon" href='imgs/favicon/favicon.ico' />
    <link rel="apple-touch-icon" sizes="180x180" href='/imgs/favicon/apple-touch-icon.png' />
    <link rel="manifest" href='/site.webmanifest' />
    <link rel="preload" href="/top500games.json" as="fetch" crossorigin>
    <style>
      .continuePlaying,
      .bookmarketedGames,
      .newGames,
      .popularGames,
      .actionTagedGames,
      .puzzleTagedGames,
      .randomTagedGames {
        min-height: 260px;
        contain: layout; 
      }
      .section-grid {
        min-height: 260px;
      }
      .site-footer {
        min-height: 140px;
        contain: layout;
      }
      .logoBox {
        width: 260px;
        height: 160px;
        contain: layout;
      }
     .hero,
     .mainView,
     .site-footer {
       will-change: contents;
     }
    </style>
  </head>
  <body>
    <div class="game-player">
        <!-- nav -->
        <TopNav />

        <!-- page content -->
        <main>
          <slot />
        </main>

        <!-- footer -->
        <SiteFooter />

        <!-- Google Analytics Tags -->
        <script is:inline defer src="https://www.googletagmanager.com/gtag/js?id=G-TW1C8W4K8F"></script>
        <script is:inline defer>
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());
          gtag('config', 'G-TW1C8W4K8F');
        </script>

        <!-- Google Ad Tags -->
        <script is:inline defer src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-1658760822270324" crossorigin="anonymous"></script>
    </div>
  </body>
</html>
