---
import '../assets/global.css';
import JsonLd from './JsonLd.astro';
import TopNav from '../componets/topNav.vue';
import SiteFooter from '../componets/footer.vue';

export interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const siteUrl = "https://burritoedition.com";
const siteName = "Burrito Edition";
const url = Astro.url;
const canonical = new URL(url.pathname + url.search, siteUrl).toString();
const defaultImage = `${siteUrl}/imgs/favicon/burritoMan.png`;


const {
  title = "Play Free Unblocked Games Online â€“ Flash & HTML5 Classics",
  description = "Play free unblocked browser games, classic Flash titles, and modern HTML5 games on Burrito Edition. No downloads, instant play at school, work, or home.",
  image = defaultImage
} = Astro.props;

const ogImage = Astro.props?.image || defaultImage;


const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  name: siteName,
  url: siteUrl,
  potentialAction: {
    "@type": "SearchAction",
    target: `${siteUrl}/search/?q={search_term_string}`,
    "query-input": {
      "@type": "PropertyValueSpecification",
      valueRequired: true,
      valueName: "search_term_string"
    }
  }
};


const orgSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  name: "BurritoEdition",
  url: siteUrl,
  logo: `${siteUrl}/imgs/favicon/favicon-96x96.png`
};

---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title.includes(siteName) ? title : `${title} | ${siteName}`}</title>
    <meta name="description" content={description}>
    <link rel="canonical" href={canonical} />
    <JsonLd data={websiteSchema} />
    <JsonLd data={orgSchema} />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonical} />
    <meta property="og:image" content={ogImage} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <link rel="icon" type="image/png" href='/imgs/favicon/favicon-96x96.png' sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href='/imgs/favicon/favicon.svg' />
    <link rel="shortcut icon" href='imgs/favicon/favicon.ico' />
    <link rel="apple-touch-icon" sizes="180x180" href='/imgs/favicon/apple-touch-icon.png' />
    <link rel="manifest" href='/site.webmanifest' />
    <link rel="preload" href="/top500games.json" as="fetch" crossorigin>
    <style>
      .continuePlaying,
      .bookmarketedGames,
      .newGames,
      .popularGames,
      .actionTagedGames,
      .puzzleTagedGames,
      .randomTagedGames {
        min-height: 260px;
        contain: layout; 
      }
      .section-grid {
        min-height: 260px;
      }
      .site-footer {
        min-height: 140px;
        contain: layout;
      }
      .logoBox {
        width: 260px;
        height: 160px;
        contain: layout;
      }
     .hero,
     .mainView,
     .site-footer {
       will-change: contents;
     }
    
      html, body {
        height: 100%;
      }

      body {
        margin: 0;
      }

      .game-player {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: stretch;
      }

      .game-player > main {
        flex: 1 0 auto;
      }
    </style>
  </head>
  <body>
    <div class="game-player">
        <!-- nav -->
        <TopNav />

        <!-- page content -->
        <main>
          <slot />
        </main>

        <!-- footer -->
        <SiteFooter />

        <!-- Google Analytics Tags -->
        <script is:inline defer src="https://www.googletagmanager.com/gtag/js?id=G-TW1C8W4K8F"></script>
        <script is:inline defer>
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());
          gtag('config', 'G-TW1C8W4K8F');
        </script>

        <!-- Google Ad Tags -->
        <script is:inline defer src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-1658760822270324" crossorigin="anonymous"></script>
    </div>
  </body>
</html>
